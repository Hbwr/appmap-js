{
  "name": "root",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces foreach -v run pre-commit",
      "pre-push": "yarn run ci"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "yarn workspaces foreach -v run lint",
    "test": "yarn workspaces foreach -v run test",
    "build": "yarn workspaces foreach -v run build",
    "ci": "yarn run build && yarn run lint && yarn run test",
    "chromatic": "yarn workspaces foreach -v run chromatic",
    "semantic-release:prepare": "yarn workspaces foreach -v exec semantic-release -e ./release/prepare.config.js",
    "semantic-release:publish": "yarn workspaces foreach -v exec semantic-release -e ./release/publish.config.js",
    "semantic-release": "yarn run semantic-release:prepare && yarn run semantic-release:publish"
  },
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.0.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "cypress": "3.8.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.5"
  }
}
